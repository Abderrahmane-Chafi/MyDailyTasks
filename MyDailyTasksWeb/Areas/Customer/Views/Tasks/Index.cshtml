@model IEnumerable<MyDailyTasks.Models.Tasks>

<div class="container p-3">

    <div class="d-flex justify-content-between pt-4 row">
        <div class="p-2 col-5">
            <div class="row">
                <h2 class="text-primary col-4">Tasks List</h2>
            </div>
                    
        </div>
            <div class="text-end col" style="width:fit-content">
                <a asp-controller="Tasks" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create a task
                </a>
            </div>
    </div>

    <br /> <br />

    <div class="row d-flex justify-content-center">
        @foreach (var item in Model)
        {
            <div class="px-0 col-md-3 col-sm-12 bg-primary text-light card m-3">
                <div class="card-header">
                    <h5 class="text-center">@item.Name</h5>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        <p>Status: @item.Status</p>
                        <p>Date: @item.Date.ToString()</p>
                    </div>
                    
                    <div class="row">
                        <a class="btn btn-dark mb-2" asp-controller="Tasks" asp-action="Upsert" asp-route-Id="@item.ID">Edit</a>
                        <a id="removeBtn" class="btn btn-warning" data-url="@Url.Action("Delete", "Tasks", new { Id = item.ID })">Remove</a>
                    </div>
                </div>
                
            </div>
        }
    </div>
    
</div>

@section Scripts{
    <script src="~/js/tasks.js"></script>
}