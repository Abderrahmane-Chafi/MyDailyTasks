@{
    //Extract query parameter
    var filter = Context.Request.Query["filter"];
    //Classes
    var Done = "text-primary";
    var Undone = "text-primary";
    var All = "text-primary";

    switch (filter)
    {
        case "Done":
            Done = "active text-white";
            break;
        case "Undone":
            Undone = "active text-white";
            break;
        case "All":
            All = "active text-white";
            break;
    }
}

<div class="container p-3">

    <div class="d-flex justify-content-between pt-4 row">
        <div class="p-2 col-5">
            <div class="row">
                <h2 class="text-primary col-4">Tasks List</h2>
                <div class="col">
                    <ul class="list-group list-group-horizontal-sm ">
                        <a style="text-decoration:none;" asp-controller="Tasks" asp-action="Index" asp-route-filter="Done">
                        <li class="list-group-item @Done">Done</li>
                        </a>
                        <a style="text-decoration:none;" asp-controller="Tasks" asp-action="Index" asp-route-filter="Undone">
                        <li class="list-group-item @Undone">Undone</li>
                        </a>
                        <a style="text-decoration:none;" asp-controller="Tasks" asp-action="Index" asp-route-filter="all">
                        <li class="list-group-item @All">All</li>
                        </a>
                    </ul>
                </div>
            </div>
                    
        </div>
            <div class="text-end col" style="width:fit-content">
                <a asp-controller="Tasks" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create a task
                </a>
            </div>
    </div>

    <br /> <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/tasks.js"></script>
}