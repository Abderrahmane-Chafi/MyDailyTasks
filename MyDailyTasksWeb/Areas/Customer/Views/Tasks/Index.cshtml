@model IEnumerable<MyDailyTasks.Models.Tasks>

<div class="mt-0">
<div class="row">
    <div class="col-7">
            <h2 class="text-primary col-4">Tasks List :</h2>

    </div>
    <div class="text-end col" style="">
        <a asp-controller="Tasks" asp-action="Upsert" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create a task
        </a>
    </div>
</div>

    <br /> <br />

    <div class="row d-flex justify-content-center">
        @foreach (var item in Model)
        {
        <div id="task-@item.ID" class="px-0 col-md-3 col-lg-3 col-5 card bg-dark text-light m-1">
                <div class="card-header border border-light bg-dark text-light p-2" style="height: 60px;">
                    <h5 class="text-center mb-2">@item.Name</h5>
                </div>
                <div  class="card-body border border-light border-top-0">
                    <div class="card-text">
                        @if (item.Status == "Done")
                        {
                            <p>Status: @item.Status</p>
                            <span class="line-break-small-screen"></span> <!-- Apply line break class -->
                        }
                        else
                        {
                            <p>Status: @item.Status</p>
                        }
                        <p >Date: @item.Date.ToShortDateString()</p>
                    </div>
                   
                    
                    <div class="row">
                        <a  class="btn btn-primary text-light mb-2" asp-controller="Tasks" asp-action="Upsert" asp-route-Id="@item.ID"><i class="bi bi-pencil"></i></a>
                    <a id="removeBtn" class="btn btn-danger text-light" onClick="Delete('/Customer/Tasks/Delete/@item.ID', 'task-@item.ID')"><i class="bi bi-trash">
                        </i>

                    </a>
                    </div>
                </div>
                
        </div>
        }
    </div>
    
</div>

@section Scripts{
    <script src="~/js/tasks.js"></script>
}