@model MyDailyTasks.Models.ViewModels.HomeVM



<section class="clean-block clean-hero">
    <div class="text">
        <h1 class="text-primary fw-bold">My Daily Tasks - Efficient Task Management<br /> for Your Daily Life</h1>
        <p>Stay organized and boost your productivity with My Daily Tasks <br />the user-friendly web application for efficient task management.</p>
        <a class="btn btn-primary" asp-controller="Tasks" asp-action="Upsert" asp-area="Customer"><i class="bi bi-plus-circle-dotted"></i> Create a task</a>
    </div>
</section>
<section class="clean-block clean-info dark bg-gray-900">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6"><img class="w-100 border border-black" src="~/images/Home/ScreenShot.png" alt="dashboard image" /></div>
            <div class="col-md-6">
                <h2 class="text-primary">Empowering Productivity: The Trusted Choice of countless Individuals </h2>
                <div class="text-light">
                    <p>This indispensable productivity tool has earned the trust of over @Model.usersCount.ToString() individuals, becoming the cornerstone of their enhanced productivity.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="clean-block features text-light">
    <div class="container text-center">
        <div class="block-heading">
            <h2 class="text-primary">What We offer</h2>
            <p>Seamless Task Management: Your Productivity, Simplified.</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-5 feature-box">
                <img src="data:image/png;base64,">
                <h3 class="text-info">Responsive design</h3>
                <p>Looks great on any screen size!</p>
            </div>
            <div class="col-md-5 feature-box">
                <img src="data:image/png;base64,">
                <h3 class="text-info">User-Friendly</h3>
                <p>Intuitive navigation for all users</p>
            </div>
            <div class="col-md-5 feature-box">
                <img src="data:image/png;base64,">                
                <h3 class="text-info">Secure Login/Registration</h3>
                <p>Your data's safety is a priority.</p>
            </div>
            <div class="col-md-5 feature-box">
                <img src="data:image/png;base64,">
                <h3 class="text-info">CRUD Operations on Tasks</h3>
                <p>Manage tasks with ease and efficiency.</p>
            </div>
        </div>
    </div>
</section>
<section class="clean-block  row  p-4">
    <div class="col-12 col-md-6 col-lg-6">
        <h2 class="text-primary my-2">Organize, Plan, and Track Your Tasks with Ease</h2>
        <p class="text-light">
            With My Daily Tasks, task management becomes as quick as a blink. Bid farewell to outdated methods of jotting down tasks and embrace innovation through its user-friendly interface.
        </p>
    </div>
    <div class="col-12 col-md-6 col-lg-6">
        <div class="video-container">
            <video class="w-100" controls>
                <source src="~/videos/MDT1.mp4" type="video/mp4">
            </video>
        </div>
    </div>
</section>



<a href="https://icons8.com/icon/RC1lCydC4FKk/smartphone"></a><a href="https://icons8.com"></a>


@section Scripts{
    <script>
        AOS.init();
    </script>
}