@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-5">
    <div class="col-md-4 card p-3 m-auto">
        <section>
            <form id="account" method="post">
                <h1 class="text-center   fw-bold">
                    <span class="text-secondary">My</span><span class="text-primary">Daily</span><span class="text-secondary">Tasks</span>
                </h1>
                <hr />
                <div class="py-2">
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="py-2">
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:none">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
