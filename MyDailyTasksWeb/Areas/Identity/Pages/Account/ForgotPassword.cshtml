@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<div class="row mt-5">
    <div class="col-md-4 card p-3 m-auto text-center">
        <h3>
            Trouble logging in?
        </h3>
        <p>Enter your email and we'll send you a link to get back into your account.</p>
        <hr />
        <form method="post">
            <div class="py-2">
                <input placeholder="Email" asp-for="Input.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
