@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@{
    Layout = "/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row mt-5 w-100 mx-0 m-auto">
    <div class="col-8 col-md-4 card m-auto text-center card bg-black text-light">
        <div class="card-header bg-black">
            <h3>
                Trouble logging in?
            </h3>
        </div>
       <div class="card-body">
            <p>Enter your email and we'll send you a link to get back into your account.</p>
            <form method="post">
                <div class="py-2">
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn btn-primary">Reset Password</button>
            </form>
       </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
